@model SimpleLibrary.Core.Dtos.Authentication.LoginDto
<!DOCTYPE html>
<html lang="en">
<head>
  <title>Simple library</title>
</head>
<body>

<div class="container">
  <h2>Simple library login page</h2>
<form class="kt-form " asp-controller="Login" asp-action="Login" method="POST">
    <div class="form-group">
      <label asp-for="Username">Username:</label>
      <input asp-for="Username" type="text" class="form-control" i placeholder="Enter username" required>
    </div>
    <div class="form-group">
      <label asp-for="Password">Password:</label>
            <input asp-for="Password" type="text" class="form-control" i placeholder="Enter username" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>

</body>
</html>